<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tonyrei.coolcalc.CalcActivity"
    android:background="@color/colorAccent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="124dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="567"
                android:id="@+id/resultTextView"
                android:textSize="65dp"
                android:gravity="right"
                android:textColor="@color/background_material_light"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_gravity="top"
            android:paddingTop="10dp">

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="8"
                android:id="@+id/eightButn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="9"
                android:id="@+id/nineButn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="7"
                android:id="@+id/sevenButn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/divideButn"
                android:src="@drawable/divide"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:tint="@color/button_material_light" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="4"
                android:id="@+id/fourButn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="5"
                android:id="@+id/fiveButn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="6"
                android:id="@+id/sixbutn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/multiplyButn"
                android:src="@drawable/multiply"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:tint="@color/button_material_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="1"
                android:id="@+id/oneButn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="2"
                android:id="@+id/twoButn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="3"
                android:id="@+id/threeButn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/subtractButn"
                android:src="@drawable/subtract"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:tint="@color/button_material_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="4">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLEAR"
                    android:id="@+id/clearButn"
                    android:gravity="center"
                    android:backgroundTint="#230405"
                    android:textColor="@color/secondary_text_default_material_dark" />
            </RelativeLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="0"
                android:id="@+id/zeroButn"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:textColor="@color/abc_secondary_text_material_dark"
                android:textSize="30dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:id="@+id/addButn"
                android:src="@drawable/add"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:tint="@color/button_material_light" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equalsButn"
        android:layout_gravity="right"
        android:src="@drawable/equal"
        android:background="#00ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:cropToPadding="false"
        android:paddingTop="85dp"
        android:paddingRight="50dp" />

</RelativeLayout>
